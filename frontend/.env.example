# Hospital Management System Frontend - Environment Variables

# API Configuration
VITE_API_BASE_URL=http://localhost:8000/api
VITE_API_TIMEOUT=10000

# Application Configuration
VITE_APP_NAME=Hospital Management System
VITE_APP_VERSION=1.0.0
VITE_APP_DESCRIPTION=A comprehensive hospital management system

# Hospital Information
VITE_HOSPITAL_NAME=General Hospital
VITE_HOSPITAL_ADDRESS=123 Medical Center Drive, City, State 12345
VITE_HOSPITAL_PHONE=+1 (555) 123-4567
VITE_HOSPITAL_EMAIL=info@generalhospital.com

# Feature Flags
VITE_ENABLE_NOTIFICATIONS=true
VITE_ENABLE_DARK_MODE=true
VITE_ENABLE_ANALYTICS=false

# Development Settings
VITE_DEBUG_MODE=true
VITE_MOCK_API=false

# Authentication
VITE_JWT_STORAGE_KEY=hospital_auth_token
VITE_REFRESH_TOKEN_KEY=hospital_refresh_token

# Date/Time Configuration
VITE_DEFAULT_TIMEZONE=America/New_York
VITE_DATE_FORMAT=MM/dd/yyyy
VITE_TIME_FORMAT=HH:mm

# Pagination
VITE_DEFAULT_PAGE_SIZE=20
VITE_MAX_PAGE_SIZE=100

# File Upload
VITE_MAX_FILE_SIZE=5242880
VITE_ALLOWED_FILE_TYPES=image/jpeg,image/png,application/pdf
