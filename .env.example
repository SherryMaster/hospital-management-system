# Hospital Management System - Environment Variables Template
# Copy this file to .env and fill in your actual values

# Database Configuration (for production docker-compose)
POSTGRES_DB=hospital_db_prod
POSTGRES_USER=hospital_user_prod
POSTGRES_PASSWORD=your_secure_password_here

# Django Configuration
SECRET_KEY=your_django_secret_key_here
ALLOWED_HOSTS=localhost,127.0.0.1,your-domain.com

# JWT Configuration
JWT_SECRET_KEY=your_jwt_secret_key_here

# Email Configuration (optional)
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_HOST_USER=your-email@gmail.com
EMAIL_HOST_PASSWORD=your-app-password

# AWS S3 Configuration (optional, for file storage)
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
AWS_STORAGE_BUCKET_NAME=your_s3_bucket_name
AWS_S3_REGION_NAME=us-east-1

# Neon Database URL (alternative to local PostgreSQL)
# DATABASE_URL=postgresql://username:password@host:port/database
